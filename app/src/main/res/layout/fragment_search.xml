<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_white"
    tools:context=".fragment.SearchFragment">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SearchByCityActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/appbar"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/mToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:navigationIcon="@drawable/ic_back" />

        </com.google.android.material.appbar.AppBarLayout>

        <EditText
            android:id="@+id/etSearch"
            android:layout_below="@id/appbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/search_bar_bg"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="15dp"
            android:elevation="3dp"
            android:focusableInTouchMode="true"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="@color/primary_gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/etSearch">

            <LinearLayout
                android:id="@+id/llMainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingVertical="25dp">

                        <TextView
                            android:id="@+id/txtCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/primary_dark"
                            android:textSize="36sp"
                            tools:text="Pune" />


                        <TextView
                            android:id="@+id/txtWeatherInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/yellow_button_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:textColor="@color/primary_white"
                            android:textSize="14sp"
                            tools:text="Clear" />


                        <TextView
                            android:id="@+id/txtTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="0dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:textColor="@color/primary_dark"
                            android:textSize="96sp"
                            android:textStyle="bold"
                            tools:text="28째C" />

                        <TextView
                            android:id="@+id/txtFeelsLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/gray_button_bg"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="7dp"
                            android:textColor="@color/primary_gray"
                            android:textSize="18sp"
                            tools:text="Feels like 26째C" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <!--    Min      -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:text="@string/min"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_min_temp" />

                        <TextView
                            android:id="@+id/txtMinTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:text="26째C"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!--    Max      -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:text="Max"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_max_temp" />

                        <TextView
                            android:id="@+id/txtMaxTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:text="26째C"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!--    Pressure -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:text="Pressure"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_pressure" />

                        <TextView
                            android:id="@+id/txtPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:text="1010 hpa"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!--    Humidity -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:text="Humidity"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_humidity" />

                        <TextView
                            android:id="@+id/txtHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:text="25%"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!--    wind     -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:text="Wind"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_wind" />

                        <TextView
                            android:id="@+id/txtWind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:text="5.01 m/s"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!--    Visibility -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="15dp"
                            android:text="Visibility"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/ic_visibility" />

                        <TextView
                            android:id="@+id/txtVisibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:text="10000 km"
                            android:textColor="@color/primary_dark"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


        <RelativeLayout
            android:id="@+id/progressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>